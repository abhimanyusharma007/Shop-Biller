<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addproduct">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:text="Add New Product"
        android:textColor="#FC090808"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/barcodescan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedtext"
        android:ems="10"
        android:hint="Tap for scan barcode"
        android:inputType="textPersonName"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/productname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedtext"
        android:ems="10"
        android:hint="Name of Product"
        android:inputType="textPersonName"
        android:paddingLeft="6dp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/productprice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundedtext"
        android:ems="10"
        android:hint="Price of Product"
        android:inputType="numberSigned"
        android:paddingLeft="6dp"
        />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/addproductbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:background="@drawable/roundedicon"
        android:text="Add Product"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        />


</LinearLayout>